@model IEnumerable<MyPhotos.Models.ImageModel>

@{
    ViewData["Title"] = "Index";
}
<center>
    <h1 class="display-4"><b>My Photos</b></h1><br><br>

</center>
<table class="table">

    <tbody>
        @if (Model != null)
        {

            if (Model.Count() != 0)
            {
                @foreach (var item in Model)
                {
                    <table style="display:inline;">
                        <tr>

                            <td>
                                <div class="one-half" style="margin-top: 30px">
                                    <a asp-action="Delete" asp-route-id="@item.ImageId"><img src="@("~/image/"+item.ImageName)" asp-append-version="true" width="350" height="200" /></a><br /><br />
                                </div>
                            </td>

                        </tr>
                    </table>
                }
            }
            else
            {
                <div style="text-align:center">
                    You don’t have any photos yet :(
                </div>
            }
        }
    </tbody>
</table>
<center>
<p>
    <a asp-action="Create">Add New Photo</a><br><br>
</p>
</center>